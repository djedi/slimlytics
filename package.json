{
  "name": "slimlytics",
  "version": "1.0.0",
  "description": "A lightweight, privacy-friendly analytics app",
  "main": "src/api/server.js",
  "scripts": {
    "dev": "concurrently \"npm run build:watch\" \"npm run server:watch\"",
    "build": "eleventy",
    "build:watch": "eleventy --watch",
    "server": "bun src/api/server.js",
    "server:watch": "bun run --watch src/api/server.js",
    "start": "npm run build && npm run server",
    "db:init": "bun src/db/init.js",
    "db:migrate": "bun scripts/add-geo-columns.js",
    "maxmind:download": "bun scripts/download-maxmind.js",
    "maxmind:update": "bun scripts/update-maxmind.js",
    "maxmind:setup-auto-update": "./scripts/setup-auto-update.sh",
    "deploy": "bun run deploy.js",
    "logs": "bun run server-logs.js"
  },
  "dependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@maxmind/geoip2-node": "^6.1.0",
    "alpinejs": "^3.13.3",
    "dotenv": "^16.4.5",
    "hono": "^3.11.0",
    "htmx.org": "^1.9.10",
    "nanoid": "^5.1.5",
    "ssh2": "^1.16.0",
    "tar-fs": "^3.1.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
